#include<stdio.h>
int main()
{
    int i=0,a[50],size;
    printf("enter the size of array");
    scanf("%d",&size);
    
    printf("enter the elements of array");
    for(i=0;i<size;i++)
    {
        scanf("%d",&a[i]);
       printf("\n%d",a[i]);
           }
           printf("reversed array is as follows:\n");
      for(i=size-1; i>=0; i--)
     {
        printf(" %d",a[i]);
      }
    return 0;
}
