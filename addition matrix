#include<stdio.h>
int main()
{
    int i,j,a[50][50],b[50][50],s[50][50];
    printf("enter the 9 elements for 3*3 matrix \n");
    for(i=0;i<2;i++)
    {
        for(j=0;j<2;j++)
        {
             scanf("%d",&a[i][j]);
        }
    }

       for(i=0;i<2;i++)
    {
        for(j=0;j<2;j++)
        {
             scanf("%d",&b[i][j]);
        }
    }

  for(i=0;i<2;i++)
    {
        for(j=0;j<2;j++)
        {
           s[i][j]=a[i][j]+b[i][j];
        }
    }
    printf("the first matrix is ");
     printf("\n");
     for(i=0;i<2;i++)
    {
        for(j=0;j<2;j++)
        {
           printf("%d\t",a[i][j]);
        }
        printf("\n\n");
    }
    printf("the second matrix is");
    printf("\n");
    for(i=0;i<2;i++)
    {
        for(j=0;j<2;j++)
        {
            printf("%d\t",b[i][j]);
        }
        printf("\n\n");
    }

     printf("the addition matrix is");
     printf("\n");

     for(i=0;i<2;i++)
    {
        for(j=0;j<2;j++)
        {
           printf("%d\t",s[i][j]);
        }
      printf("\n\n");
    }

    return 0;
}
