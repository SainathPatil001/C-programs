#include<stdio.h>
#include<stdlib.h>
int main()
{
   int i,n,*ptr,j,sum=0;
   printf("enter the amount of space required");
   printf("\n");
   scanf("%d",&n);

   ptr=(int *)malloc(n*sizeof(int));
   if(ptr== 0)
   {
       printf("cant allocate required memory space");\
       return 0;
   }
   for(i=0;i<n;i++)
   {
       scanf("%d:",&ptr[i]);
   }
    printf("\n");

   for(i=0;i<n;i++)
   {
       printf("%d:",ptr[i]);
   }

    return 0;
}
